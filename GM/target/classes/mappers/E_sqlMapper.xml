<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    
<mapper namespace="com.spring.gm.persistence.E_DAO" >

	<!-- 자신과 동일한 회사 사원 수 구하기 -->
	<select id="getMyCompanyMemCnt" resultType="int">
		SELECT count(*) FROM member where company = #{company}
	</select>

	<!-- company 컬럼과 입력받은 company값 비교해서 가져오기용 -->
	<select id="getMyCompanyInfo" parameterType="int" resultType="com.spring.gm.vo.MemberVO">
		SELECT * FROM member WHERE company = #{company}
	</select>


</mapper>